{
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ES2022", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./dist/out-tsc",
    "paths": {
      "$environments/*": ["src/environments/*"],
      "$animations": ["src/app/animations"],
      "$components/*": ["src/app/components/*"],
      "$directives/*": ["src/app/directives/*"],
      "$domain/classes": ["src/app/domain/classes"],
      "$domain/enums": ["src/app/domain/enums"],
      "$domain/functions": ["src/app/domain/functions"],
      "$domain/interfaces": ["src/app/domain/interfaces"],
      "$domain/mixins": ["src/app/domain/mixins"],
      "$domain/models": ["src/app/domain/models"],
      "$domain/types": ["src/app/domain/types"],
      "$modules/*": ["src/app/modules/*"],
      "$pipes/*": ["src/app/pipes/*"],
      "$routing/*": ["src/app/routing/*"],
      "$services/*": ["src/app/services/*"],
      "$store/*": ["src/app/store/*"],
      "$tokens/*": ["src/app/tokens/*"],
      "$validators": ["src/app/validators"],
      "$views/*": ["src/app/views/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
