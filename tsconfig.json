/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": "./",
    "downlevelIteration": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "$environments/*": ["src/environments/*"],
      "$animations": ["src/app/animations"],
      "$components/*": ["src/app/components/*"],
      "$directives/*": ["src/app/directives/*"],
      "$domain/classes": ["src/app/domain/classes"],
      "$domain/enums": ["src/app/domain/enums"],
      "$domain/functions": ["src/app/domain/functions"],
      "$domain/interfaces": ["src/app/domain/interfaces"],
      "$domain/mixins": ["src/app/domain/mixins"],
      "$domain/models": ["src/app/domain/models"],
      "$domain/types": ["src/app/domain/types"],
      "$modules/*": ["src/app/modules/*"],
      "$pipes/*": ["src/app/pipes/*"],
      "$routing/*": ["src/app/routing/*"],
      "$services/*": ["src/app/services/*"],
      "$store/*": ["src/app/store/*"],
      "$tokens/*": ["src/app/tokens/*"],
      "$validators": ["src/app/validators"],
      "$views/*": ["src/app/views/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
